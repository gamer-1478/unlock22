<div class="landing-container">
    <img>
    <div class="landing-class">
        <img src="/babyimmafly.png" class="signup-image">
        <div class="signup">
            <h1 style="color: #00FFA3; font-size: 44px;">LOGIN</h1>
            <div class="signup-form">
                <div class="field">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" placeholder="John.Doe@email.com">
                </div>
                <div class="field">
                    <label for="pass">Password</label>
                    <input type="text" id="pass" name="pass" placeholder="J0#n@D0e@secret">
                </div>
                <a href="/register" class="click-here">Don't have a account,
                    register!</a>
                <input type="button" value="proceed" onclick="submit();" class="signup-button" />
            </div>
        </div>
    </div>
</div>

<style>
    .signup-image {
        height: calc(100% - 80px);
        width: 60vw;
        align-self: flex-start;
    }

    .landing-container {
        min-width: 100%;
        min-height: 85%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .click-here {
        color: #393E47;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
    }

    .signup-button {
        margin-top: 20px;
        background-color: #393E47;
        color: white;
        border-radius: 5px;
        width: 130px;
        height: 50px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
    }

    .field {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
    }

    input {
        width: 300px;
        height: 40px;
        border-radius: 25px;
        border: 1px solid #BBBBBB;
        padding: 10px;
        margin-bottom: 10px;
        background-color: transparent;
    }

    .signup-form {
        margin-top: 30px;
        width: 40vw;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .signup {
        width: 100%;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .landing-class {
        background-size: contain;
        background-repeat: no-repeat;
        display: flex;
        justify-content: space-evenly;
        align-items: flex-start;
        width: 100%;
    }

    .landing-main {
        position: absolute;
        top: 40px;
        z-index: -1;
    }
</style>

<script>
    var notyf = new Notyf();
    async function submit() {
        var email = document.getElementById("email").value;
        var pass = document.getElementById("pass").value;
        await fetch("/login", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                email: email,
                password: pass
            })
        }).then(async (response) => {
            res = await response.json()
            console.log(res)
            if (res.success) {
                await notyf.success('You have been successfully registered!');
                window.location.href = "/"
            } else {
                await notyf.error(res.message)
            }
        });
    }
</script>