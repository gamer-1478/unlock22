<!DOCTYPE html>
<div style="display: flex; justify-content: center; width: 100%;">
    <header class="navbar-container">
        <nav class="navbar">
            <a href="/" class="nav-branding"><img width="70px" src="/whitelogo.png"></a>
            <div class="right-side-nav">
                <button style="background-color: black; color: white;" class="sign-button"
                    onclick="new function(){window.location.href = '/login'};">LOGIN</button>
                <button class="sign-button"
                    onclick="new function(){window.location.href = '/register'};">SIGN UP</button>
            </div>
            <div class="hamburger">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        </nav>
    </header>
</div>

<style>
    .desktop {
        display: none;
    }

    .sign-button {
        background-color: #fff;
        color: #000;
        border: 2px solid white;
        border-radius: 15px;
        width: 200px;
        height: 50px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
    }

    .right-side-nav {
        display: flex;
        justify-content: space-between;
        width: 30vw;
        align-items: center;
    }

    .bar {
        color: #000;
    }

    .navbar-container {
        color: #fff;
        background-color: #151515;
        width: 100%;
    }

    .nav-item {
        list-style: none;
        color: #000;
    }

    .nav-link,
    .nav-branding {
        color: black;
        text-decoration: none;
        display: flex;
        align-items: center;
        font-weight: 500;
        font-size: 14px;
    }

    .nav-branding {
        margin-right: 3vw;
    }

    .navbar {
        min-height: 90px;
        display: flex;
        align-items: center;
        padding: 0 24px;
        justify-content: space-between;
    }

    .nav-branding {
        font-size: 2rem;
    }

    .nav-menu {
        /* margin-left: 2.5vw; */
        display: flex;
        align-items: center;
        gap: 3vw;
        z-index: 1;
    }

    .nav-link {
        transition: 0.3s ease-out;
    }

    .nav-link:hover {
        color: #84dccf;
    }

    .hamburger {
        display: none;
        cursor: pointer;
    }

    .bar {
        display: block;
        width: 25px;
        height: 3px;
        margin: 5px auto;
        -webkit-transition: all 0.3s ease;
        transition: all 0.3s ease;
        background-color: #000;
    }

    .search-input-div {
        border: none;
        border-radius: 10px;
        background-color: white;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.35);
    }

    .search-icon {
        padding-right: 10px;
    }

    @media(max-width:768px) {
        .desktop {
            display: flex;
        }

        .mobile {
            display: none;
        }

        .search-input-div {
            display: none;
        }

        .hamburger {
            display: block;
            color: #000;
        }

        .hamburger.active .bar:nth-child(2) {
            opacity: 0;
        }

        .hamburger.active .bar:nth-child(1) {
            transform: translateY(8px) rotate(45deg);
        }

        .hamburger.active .bar:nth-child(3) {
            transform: translateY(-8px) rotate(-45deg);
        }

        .nav-menu {
            position: fixed;
            left: -100%;
            top: 90px;
            gap: 0;
            height: 1vh;
            flex-direction: column;
            background-color: #fff;
            width: 100%;
            height: calc(100vh - 90px);
            text-align: center;
            transition: 0.3s;
        }

        .nav-item {
            margin: 2vh;
        }

        .nav-menu.active {
            left: 0;
        }

        .navbar {
            justify-content: space-between;
        }
    }
</style>

<script>
    const hamburger = document.querySelector(".hamburger");
    const navMenu = document.querySelector(".nav-menu");

    hamburger.addEventListener("click", () => {
        hamburger.classList.toggle("active");
        navMenu.classList.toggle("active");
    })

    document.querySelectorAll(".nav-link").forEach(n => n.addEventListener("click", () => {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
    }))
</script>